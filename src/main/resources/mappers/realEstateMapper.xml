<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.quiz.lesson03.dao.RealEstateDAO">
 	<select id="selectRealEstate" parameterType="int" resultType="com.quiz.lesson03.model.RealEstate">
 	SELECT
	 	`id`
		,`realtorId`
		,`address`
		,`area`
		,`type`
		,`price`
		,`rentPrice`
		,`createdAt`
		,`updatedAt`
	FROM
		`real_estate`
	WHERE
		`rentPrice`  #{rentPrice}
 	</select>
 	
 	<select id="selectRealEstatePrice" parameterType="int" resultType="com.quiz.lesson03.model.RealEstate">
 	 	SELECT
	 	`id`
		,`realtorId`
		,`address`
		,`area`
		,`type`
		,`price`
		,`rentPrice`
		,`createdAt`
		,`updatedAt`
	FROM
		`real_estate`
	WHERE
	<![CDATA[
		`rentPrice` < #{rentPrice}
	]]>
	<!-- 아니면 $lt; -->
	</select>
	
	<select id="selectRealEstateListByAreaPrice" parameterType="int" resultType="com.quiz.lesson03.model.RealEstate">
 	SELECT
	 	`id`
		,`realtorId`
		,`address`
		,`area`
		,`type`
		,`price`
		,`rentPrice`
		,`createdAt`
		,`updatedAt`
	FROM
		`real_estate`
	WHERE
		<![CDATA[
		`area` >= #{area} AND `price` <= #{price} AND `type` = '매매'
		]]>
		ORDER BY `id` DESC
	</select>
	
	<insert id="insertRealEstate" parameterType="com.quiz.lesson03.model.RealEstate">
		INSERT INTO `real_estate`
		(
			`realtorId`
			,`address`
			,`area`
			,`type`
			,`price`
			,`rentPrice`
			,`createdAt`
			,`updatedAt`
		)
		VALUES
		(
			#{realtorId}
			, #{address}
			, #{area}
			, #{type}
			, #{price}
			, NULL
			, NOW()
			, NOW()
		)
	</insert>
	
	<insert id="insertRealEstateAsField" parameterType="map">
		INSERT INTO `real_estate`
		(
			`realtorId`
			,`address`
			,`area`
			,`type`
			,`price`
			,`rentPrice`
			,`createdAt`
			,`updatedAt`
		)
		VALUES
		(
			#{realtorId}
			, #{address}
			, #{area}
			, #{type}
			, #{price}
			, #{rentPrice)
			, NOW()
			, NOW()
		)
	</insert>
 </mapper>